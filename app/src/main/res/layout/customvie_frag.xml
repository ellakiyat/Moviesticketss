<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#8B008B"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fr_li"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mov"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="150dp"
            android:paddingTop="20dp"
            android:text="Any Movie"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/cus_img"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exposure_plus_1"
            android:layout_toRightOf="@+id/mov"/>

    </LinearLayout>

    <View
        android:id="@+id/cont4"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/cus_img"
        android:background="#ECE4EB" />


    <LinearLayout
        android:id="@+id/fr_li1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fr_li"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/theatre"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="150dp"
            android:paddingTop="10dp"
            android:text="Any Theatre"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/cus_theatr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/theatre"
            android:src="@drawable/ic_exposure_plus_1" />

    </LinearLayout>

    <View
        android:id="@+id/cont5"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/cus_theatr"
        android:background="#ECE4EB" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fr_li2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="150dp"
            android:paddingTop="10dp"
            android:text="Any Time"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/cus_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exposure_plus_1"
            android:layout_toRightOf="@+id/time"/>

    </LinearLayout>

    <View
        android:id="@+id/cont6"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/cus_date"
        android:background="#ECE4EB" />

    <LinearLayout
        android:id="@+id/fr_li2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/fr_li1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="100dp"
            android:paddingTop="10dp"
            android:text="Any Date"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/cus_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exposure_plus_1"
            android:layout_toRightOf="@+id/date"/>

    </LinearLayout>
</LinearLayout>