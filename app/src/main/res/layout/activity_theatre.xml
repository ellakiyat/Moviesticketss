<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.realimage.administrator.moviesticket.fragment.TheatreFragment">


    <android.support.v7.widget.Toolbar
        android:id="@+id/id_thetoolbar"
        android:layout_width="match_parent"
        android:title="Moviepass Login"
        android:layout_height="?attr/actionBarSize"
        android:background="#8B008B"
        android:subtitleTextColor="#ffffff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUSTICKETS"
            android:textSize="25sp"
            android:textColor="#fff"
            android:textStyle="bold"
            />

    </android.support.v7.widget.Toolbar>



</LinearLayout>